//
// MUI Button module
//

@use "lib/color";
@use "lib/typography";
@use "ilb/util";

@use "theme";


$height:                util.mui-rem(36px) !default;
$height-sm:             $height * 0.85 !default;
$height-lg:             $height * 1.5 !default;

$border-radius:         theme.$border-radius-default !default;

$padding-horizontal:    util.mui-rem(26px) !default;
$padding-horizontal-sm: util.mui-rem(16px) !default;
$padding-horizontal-lg: $padding-horizontal !default;

$font-size:             util.mui-rem(14px) !default;
$font-size-sm:          util.mui-rem(13px) !default;
$font-size-lg:          $font-size !default;

$fab-diameter:          util.mui-rem(55px) !default;
$fab-diameter-sm:       util.mui-rem(44px) !default;
$fab-diameter-lg:       util.mui-rem(75px) !default;

$margin-vertical:       util.mui-rem(6px) !default;
$spacing-horizontal:    util.mui-rem(8px) !default;


$default-bg-color:     color.mui-color('white') !default;
$default-font-color:   theme.$base-font-color !default;
$default-ripple-color: darken(color.mui-color('white'), 35%) !default;

$primary-bg-color:     theme.$primary-color !default;
$primary-font-color:   color.mui-color('white') !default;
$primary-ripple-color: color.mui-color('white') !default;

$danger-bg-color:      theme.$danger-color !default;
$danger-font-color:    color.mui-color('white') !default;
$danger-ripple-color:  color.mui-color('white') !default;

$dark-bg-color:        color.mui-color('grey', '800') !default;
$dark-font-color:      color.mui-color('white') !default;
$dark-ripple-color:    color.mui-color('white') !default;

$accent-bg-color:      theme.$accent-color !default;
$accent-font-color:    color.mui-color('white') !default;
$accent-ripple-color:  color.mui-color('white') !default;

$flat-bg-color:        transparent !default;
$flat-bg-color-hover:  darken(color.mui-color('white'), 5%) !default;
$flat-ripple-color:    darken(color.mui-color('white'), 35%) !default;


// ============================================================================
// Mixins
// ============================================================================

@mixin _box-shadow-raised() {
  box-shadow: 0 0px 2px rgba(color.mui-color('black'), 0.12),
              0 2px 2px rgba(color.mui-color('black'), 0.20);
  
  // IE10+
  @media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
    box-shadow: 0 -1px 2px rgba(color.mui-color('black'), 0.12),
                -1px 0px 2px rgba(color.mui-color('black'), 0.12),
                0 0px 2px rgba(color.mui-color('black'), 0.12),
                0 2px 2px rgba(color.mui-color('black'), 0.20);
  }

  // Edge
  @supports (-ms-ime-align:auto) {
    box-shadow: 0 -1px 2px rgba(color.mui-color('black'), 0.12),
                -1px 0px 2px rgba(color.mui-color('black'), 0.12),
                0 0px 2px rgba(color.mui-color('black'), 0.12),
                0 2px 2px rgba(color.mui-color('black'), 0.20);
  }
}


@mixin _box-shadow-active() {
  box-shadow: 0 0px 4px rgba(color.mui-color('black'), 0.12),
              1px 3px 4px rgba(color.mui-color('black'), 0.20);
  
  // IE10+
  @media all and (-ms-high-contrast: none), (-ms-high-contrast: active) {
    box-shadow: 0 -1px 2px rgba(color.mui-color('black'), 0.12),
                -1px 0px 2px rgba(color.mui-color('black'), 0.12),
                0 0px 4px rgba(color.mui-color('black'), 0.12),
                1px 3px 4px rgba(color.mui-color('black'), 0.20);
  }

  // Edge
  @supports (-ms-ime-align:auto) {
    box-shadow: 0 -1px 2px rgba(color.mui-color('black'), 0.12),
                -1px 0px 2px rgba(color.mui-color('black'), 0.12),
                0 0px 4px rgba(color.mui-color('black'), 0.12),
                1px 3px 4px rgba(color.mui-color('black'), 0.20);
  }
}


@mixin _button-variant($font-color, $bg-color) {
  color: $font-color;
  background-color: $bg-color;

  &:hover,
  &:focus,
  &:active {
    color: $font-color;
    background-color: lighten($bg-color, 5%);
  }

  &[disabled] {
    &:hover,
    &:focus,
    &:active {
      color: $font-color;
      background-color: $bg-color;
    }
  }
}


@mixin _button-flat-variant($font-color, $bg-color-hover) {
  &.mui-btn--flat {
    color: $font-color;
    background-color: transparent;

    &:hover,
    &:focus,
    &:active {
      color: $font-color;
      background-color: $bg-color-hover;
    }

    &[disabled] {
      &:hover,
      &:focus,
      &:active {
        color: $font-color;
        background-color: transparent;
      }
    }
  }
}


// ============================================================================
// DEFAULT-BUTTON
// ============================================================================

.mui-btn {
  @include typography.mui-text("button");

  @include _button-variant(
    theme.$btn-default-font-color,
    theme.$btn-default-bg-color);

  @include _button-flat-variant(
    theme.$btn-default-font-color,
    theme.$btn-flat-bg-color-hover);

  transition: all 0.2s ease-in-out;
  
  // Layout
  display: inline-block;
  height: theme.$btn-height;
  padding: 0 theme.$btn-padding-horizontal;
  margin: theme.$btn-margin-vertical 0;
  
  // Look and feel
  border: none;
  border-radius: theme.$btn-border-radius;
  cursor: pointer;
  touch-action: manipulation;
  background-image: none;  // reset unusual Firefox-on-Android

  // Typography
  text-align: center;
  line-height: theme.$btn-height;
  vertical-align: middle;
  white-space: nowrap;
  user-select: none;
  font-size: theme.$btn-font-size;
  font-family: inherit;
  letter-spacing: 0.03em;

  // For ripples
  position: relative;
  overflow: hidden;

  &:hover,
  &:focus,
  &:active {
    outline: 0;
    text-decoration: none;
    color: theme.$btn-default-font-color;
  }

  &:hover,
  &:focus {
    @include _box-shadow-raised();
  }
  
  &:active:hover {
    @include _box-shadow-active();
  }

  &:disabled,
  &.mui--is-disabled {
    cursor: theme.$cursor-disabled;
    pointer-events: none;
    opacity: 0.60;
    box-shadow: none;
  }
}

.mui-btn + .mui-btn {
  margin-left: theme.$btn-spacing-horizontal;
}

// ----------------------------------------------------------------------------
// Cherry-pick from Normalize.css
// ----------------------------------------------------------------------------

// remove inner border and padding in Firefox                                 
button.mui-btn::-moz-focus-inner,
.mui-btn[type="button"]::-moz-focus-inner,
.mui-btn[type="reset"]::-moz-focus-inner,
.mui-btn[type="submit"]::-moz-focus-inner {
  border-style: none;
  padding: 0;
}

// restore focus styles unset by previous role                                
button.mui-btn:-moz-focusring,
.mui-btn[type="button"]:-moz-focusring,
.mui-btn[type="reset"]:-moz-focusring,
.mui-btn[type="submit"]:-moz-focusring {
  outline: 1px dotted ButtonText;
}  
  


// ============================================================================
// BUTTON-TYPES
// ============================================================================


// ----------------------------------------------------------------------------
// FLAT
// ----------------------------------------------------------------------------

.mui-btn--flat {
  background-color: theme.$btn-flat-bg-color;

  &:hover,
  &:focus,
  &:active,
  &:active:hover {
    box-shadow: none;
    background-color: theme.$btn-flat-bg-color-hover;
  }
}


// ----------------------------------------------------------------------------
// RAISED
// ----------------------------------------------------------------------------

.mui-btn--raised {
  @include _box-shadow-raised();

  &:active {
    @include _box-shadow-active();
  }
}


// ----------------------------------------------------------------------------
// FLOATING-ACTION-BUTTON-(FAB)
// ----------------------------------------------------------------------------

.mui-btn--fab {
  @extend .mui-btn--raised;

  // Layout
  position: relative;
  padding: 0;
  width: theme.$btn-fab-diameter;
  height: theme.$btn-fab-diameter;
  line-height: theme.$btn-fab-diameter;
  border-radius: 50%;
  z-index: 1;
}



// ============================================================================
// BUTTON-STYLES
// ============================================================================

.mui-btn--primary {
  @include _button-variant(
    theme.$btn-primary-font-color,
    theme.$btn-primary-bg-color);
  @include _button-flat-variant(
    theme.$btn-primary-bg-color,
    theme.$btn-flat-bg-color-hover);
}

.mui-btn--dark {
  @include _button-variant(
    theme.$btn-dark-font-color,
    theme.$btn-dark-bg-color);
  @include _button-flat-variant(
    theme.$btn-dark-bg-color,
    theme.$btn-flat-bg-color-hover);
}

.mui-btn--danger {
  @include _button-variant(
    theme.$btn-danger-font-color,
    theme.$btn-danger-bg-color);
  @include _button-flat-variant(
    theme.$btn-danger-bg-color,
    theme.$btn-flat-bg-color-hover);
}

.mui-btn--accent {
  @include _button-variant(
    theme.$btn-accent-font-color,
    theme.$btn-accent-bg-color);
  @include _button-flat-variant(
    theme.$btn-accent-bg-color,
    theme.$btn-flat-bg-color-hover);
}



// ============================================================================
// BUTTON-SIZES
// ============================================================================

.mui-btn--small {
  height: theme.$btn-height-sm;
  line-height: theme.$btn-height-sm;
  padding: 0 theme.$btn-padding-horizontal-sm;
  font-size: theme.$btn-font-size-sm;
}

.mui-btn--large {
  height: theme.$btn-height-lg;
  line-height: theme.$btn-height-lg;
  padding: 0 theme.$btn-padding-horizontal-lg;
  font-size: theme.$btn-font-size-lg;
}

.mui-btn--fab.mui-btn--small {
  width: theme.$btn-fab-diameter-sm;
  height: theme.$btn-fab-diameter-sm;
  line-height: theme.$btn-fab-diameter-sm;
}

.mui-btn--fab.mui-btn--large {
  width: theme.$btn-fab-diameter-lg;
  height: theme.$btn-fab-diameter-lg;
  line-height: theme.$btn-fab-diameter-lg;
}
